<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/scrollView" android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:paddingTop="2dip"
                android:paddingBottom="5dip" android:paddingLeft="14dip"
                android:paddingRight="10dip" android:layout_weight="1">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical" android:layout_width="fill_parent"
                      android:layout_height="wrap_content">
            <TextView android:id="@+id/message" style="?android:attr/textAppearanceMedium"
                      android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:padding="5dip" android:linksClickable="true"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:orientation="vertical" android:gravity="bottom"
                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:paddingLeft="14dip" android:paddingRight="10dip"
                  android:paddingBottom="5dip">
        <CheckBox android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:id="@+id/CheckBox_DoNotShowAgain" android:text="Do not show again"/>
    </LinearLayout>
</LinearLayout>