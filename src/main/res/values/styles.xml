<resources>
    <style name="Greedy">
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="Layout" parent="Greedy">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <color name="SectionHeader">@android:color/holo_blue_light</color>
    <style name="SectionHeader" parent="Greedy">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/SectionHeader</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="SectionDivider" parent="Greedy">
        <item name="android:background">@color/SectionHeader</item>
        <item name="android:layout_height">1px</item>
    </style>
    <style name="LargeWidget" parent="Greedy">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="Edit" parent="LargeWidget">
    </style>
    <color name="EditBackground">#808080</color>
    <style name="EditBackground" parent="LargeWidget">
        <item name="android:textColor">@color/EditBackground</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="ReadOnlyEdit" parent="Edit">
        <item name="android:inputType">none</item>
    </style>
    <style name="Button" parent="LargeWidget">
        <item name="android:minWidth">96sp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
    <style name="Table" parent="Greedy">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:stretchColumns">0</item>
    </style>
    <style name="Row" parent="Greedy">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">fill</item>
    </style>
    <style name="Help" parent="Greedy">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>